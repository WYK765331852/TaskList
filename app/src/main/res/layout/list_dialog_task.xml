<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/list_dialog_task">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:gravity="center_vertical"
            android:background="@color/colorPrimary">
            <ImageView
                android:id="@+id/list_dialog_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="14dp"
                android:src="@drawable/card_icon_4"
                />
            <TextView
                android:id="@+id/list_dialog_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="Time"
                android:textSize="16sp"
                android:textColor="@color/list_white"
                />


        </LinearLayout>

        <DatePicker
            android:id="@+id/list_main_dialog_date"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:calendarViewShown="false">

        </DatePicker>
        <TextView
            android:id="@+id/list_dialog_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Accompany her to the theater."
            android:textSize="14sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >
            <TextView
                android:id="@+id/list_main_dialog_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="14sp"
                android:text="General event"/>
            <TextView
                android:id="@+id/list_main_dialog_emergency"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/list_main_float"
                android:layout_weight="1"
                android:textColor="@color/list_white"
                android:textSize="14sp"
                android:text="Emergency"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/list_main_dialog_prompt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Loop prompt"
                android:textSize="14sp"/>
            <Switch
                android:id="@+id/list_main_dialog_swith"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginRight="24dp"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/list_main_dialog_negative"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="60dp"
            android:src="@drawable/list_dialog_false"
            />
        <ImageView
            android:id="@+id/list_main_dialog_positive"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="60dp"
            android:layout_weight="1"
            android:src="@drawable/list_dialog_true"/>
    </LinearLayout>


</LinearLayout>